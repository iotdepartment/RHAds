@model Slide

<div id="carousel-@Model.SlideId"
     class="carousel slide w-100 h-100"
     data-bs-ride="carousel"
     data-bs-interval="3000">

    <div class="carousel-inner w-100 h-100">

        @foreach (var img in Model.SlideImages.OrderBy(i => i.Orden))
        {
            var first = Model.SlideImages.OrderBy(i => i.Orden).First();

            <div class="carousel-item @(img == first ? "active" : "") w-100 h-100">

                <!-- CONTENEDOR FLEX PARA CENTRAR -->
                <div class="d-flex justify-content-center align-items-center w-100 h-100">
                    <img src="@img.RutaImagen"
                         class="slide-img img-fluid"
                         style="max-width:100%; max-height:100%; object-fit:contain;" />
                </div>

            </div>
        }

    </div>

</div>