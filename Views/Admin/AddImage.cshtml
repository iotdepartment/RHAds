@{
    ViewData["Title"] = "Agregar Imagen";
}

<h2 class="mb-4">Agregar Imagen al Slide</h2>

<input type="hidden" id="slideId" value="@ViewBag.SlideId" />

<div class="card shadow-sm p-4">

    <div class="mb-3">
        <label class="form-label">Seleccionar Imagen</label>
        <input id="archivo" type="file" class="form-control" accept="image/*">
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea id="descripcion" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Orden</label>
        <input id="orden" type="number" class="form-control" value="1">
    </div>

    <div class="form-check mb-3">
        <input id="activo" type="checkbox" class="form-check-input" checked>
        <label class="form-check-label">Activo</label>
    </div>

    <button class="btn btn-primary" onclick="guardarImagen()">Guardar Imagen</button>
    <a href="/Admin/Images?slideId=@ViewBag.SlideId" class="btn btn-secondary ms-2">Cancelar</a>

</div>

<script>
    async function guardarImagen() {

        const archivo = document.getElementById("archivo").files[0];

        if (!archivo) {
            alert("Selecciona una imagen.");
            return;
        }

        const formData = new FormData();
        formData.append("slideId", document.getElementById("slideId").value);
        formData.append("descripcion", document.getElementById("descripcion").value);
        formData.append("orden", document.getElementById("orden").value);
        formData.append("activo", document.getElementById("activo").checked);
        formData.append("archivo", archivo);

        const resp = await fetch('/Admin/AddImageUpload', {
            method: 'POST',
            body: formData
        });

        const result = await resp.json();

        if (resp.ok) {
            alert(result.message);
            window.location.href = "/Admin/Images?slideId=" + document.getElementById("slideId").value;
        } else {
            alert("Error: " + result.message);
        }
    }
</script>