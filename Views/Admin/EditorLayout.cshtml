@using RHAds.Models.Areas

@model Area
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editor de Layout - @Model.Nombre</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- GridStack 12.3.3 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/gridstack.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/html-dnd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/gridstack-h5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/gridstack-all.js"></script>


    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
            background: black;
        }

        .toolbar {
            height: 60px;
            background: #111;
            display: flex;
            align-items: center;
            padding-left: 10px;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10;
            border-bottom: 2px solid #333;
        }

            .toolbar h2 {
                color: white;
                margin: 0;
                margin-right: 20px;
            }

        .grid-stack {
            height: calc(100vh - 60px) !important;
            width: 100vw !important;
            margin-top: 60px;
        }

        .grid-stack-item-content {
            display: flex;
            flex-direction: column;
            height: 100%;
            width: 100%;
            overflow: hidden;
            background: #000;
            border: 2px solid #666;
        }

        .slide-title {
            height: 40px;
            color: white;
            text-align: center;
            line-height: 40px;
            font-weight: bold;
            background: rgba(0,0,0,0.5);
            flex-shrink: 0;
        }

        .carousel-area {
            flex: 1;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: black;
            position: relative;
        }

        .slide-img {
            max-height: 100%;
            max-width: 100%;
            display: block;
            margin: auto;
            width: 100%;
            height: 100%;
            object-fit: contain;
            background-color: black;
        }

        .grid-stack-static {
            pointer-events: none;
        }
    </style>
</head>

<body>

    <div class="toolbar">
        <h2>Editor de Layout — @Model.Nombre</h2>
        <button form="layoutForm" class="btn btn-primary">Guardar Layout</button>
    </div>

    <form id="layoutForm" method="post" asp-action="GuardarLayout" asp-route-areaId="@Model.AreaId">

        <div class="grid-stack">

            <div class="grid-stack-item carousel-area rounded-4"
                 data-gs-id="fixed-logo"
                 gs-x="0"
                 gs-y="0"
                 gs-w="2"
                 gs-h="2"
                 gs-auto-position="false">

                <div class="grid-stack-item-content d-flex justify-content-center align-items-center bg-secondary-subtle">
                    <img src="/images/logo.png" class="img-fluid w-75 h-75 object-fit-contain" />
                </div>

            </div>

            <!-- ÁREA FIJA -->
            <div class="grid-stack-item"
                 data-gs-id="fixed-area"
                 gs-x="2"
                 gs-y="0"
                 gs-w="2"
                 gs-h="2"
                 gs-auto-position="false">

                <div class="grid-stack-item-content area-title"
                     style="display:flex; align-items:center; justify-content:center; color:white; font-size:2rem; font-weight:bold;">
                    @Model.Nombre
                </div>

            </div>

            <!-- SLIDES -->
            @foreach (var layout in Model.SlideLayouts.Where(x => x.Slide.Activo))
            {
                <div class="grid-stack-item"
                     data-gs-id="@layout.SlideId"
                     gs-x="@layout.X"
                     gs-y="@layout.Y"
                     gs-w="@layout.Width"
                     gs-h="@layout.Height"
                     gs-auto-position="false">

                    <div class="grid-stack-item-content d-flex flex-column">

                        <!-- TÍTULO (altura fija) -->
                        <div class="slide-title w-100 text-center"
                             style="background:@layout.Slide.ColorCabecera;">
                            @layout.Slide.Titulo
                        </div>

                        <!-- CARRUSEL (ocupa el resto sin desbordar) -->
                        <div class="carousel-area d-flex justify-content-center align-items-center flex-grow-1 w-100">
                            <div class="carousel-wrapper w-100 h-100">
                                @await Html.PartialAsync("_SlideCarousel", layout.Slide)
                            </div>
                        </div>

                    </div>

                </div>
            }
        </div>

    </form>

    <script>
        window.addEventListener("load", function () {

            const TOTAL_ROWS = 12;
            const gridHeight = window.innerHeight - 60;
            const cellHeight = gridHeight / TOTAL_ROWS;

            const grid = GridStack.init({
                cellHeight: cellHeight,
                float: true,
                disableOneColumnMode: true,
                margin: 0,
                maxRow: TOTAL_ROWS
            });

            // BLOQUEAR WIDGETS FIJOS (LOGO Y ÁREA)
            ["fixed-logo", "fixed-area"].forEach(id => {

                const el = document.querySelector(`[data-gs-id="${id}"]`);
                if (!el) return;

                grid.update(el, {
                    noMove: true,
                    noResize: true,
                    locked: true
                });

                el.classList.add("grid-stack-static");
            });

            // FUNCIÓN PARA FORZAR QUE NADA SE SALGA DEL GRID
            function clampNode(node) {
                if (!node) return;

                // Si se pasa hacia abajo, lo regresamos
                if (node.y + node.h > TOTAL_ROWS) {
                    node.y = TOTAL_ROWS - node.h;
                    if (node.y < 0) node.y = 0;
                    grid.update(node.el, { y: node.y });
                }
            }

            // BLOQUEAR DRAG HACIA ABAJO
            grid.on('drag', (event, el) => {
                const node = el.gridstackNode;
                clampNode(node);
            });

            // BLOQUEAR RESIZE HACIA ABAJO
            grid.on('resize', (event, el) => {
                const node = el.gridstackNode;
                clampNode(node);
            });

            // BLOQUEAR CAMBIOS AUTOMÁTICOS DEL ENGINE
            grid.on('change', (event, items) => {
                items.forEach(n => clampNode(n));
            });

            // Ajuste de imágenes
            function ajustarImagenes() {
                document.querySelectorAll(".slide-img").forEach(img => {
                    const cont = img.closest(".carousel-area");
                    if (!cont) return;

                    img.style.maxHeight = cont.clientHeight + "px";
                    img.style.maxWidth = cont.clientWidth + "px";
                });
            }

            ajustarImagenes();
            window.addEventListener("resize", ajustarImagenes);

            document.querySelectorAll(".carousel").forEach(carousel => {
                carousel.addEventListener("slid.bs.carousel", ajustarImagenes);
            });

            grid.on('resizestop', ajustarImagenes);
            grid.on('dragstop', ajustarImagenes);

            // Guardado
            document.querySelector("#layoutForm").addEventListener("submit", function () {

                const layout = grid.engine.nodes
                    .filter(n => !["fixed-logo", "fixed-area"].includes(n.el.dataset.gsId))
                    .map(n => ({
                        id: n.el.dataset.gsId,
                        x: n.x,
                        y: n.y,
                        w: n.w,
                        h: n.h
                    }));

                layout.forEach(item => {
                    this.insertAdjacentHTML("beforeend", `
                        <input type="hidden" name="X_${item.id}" value="${item.x}">
                        <input type="hidden" name="Y_${item.id}" value="${item.y}">
                        <input type="hidden" name="W_${item.id}" value="${item.w}">
                        <input type="hidden" name="H_${item.id}" value="${item.h}">
                    `);
                });

            });

        });
    </script>
</body>
</html>