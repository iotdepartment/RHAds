@model Area
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Fullscreen - @Model.Nombre</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- GridStack 12.3.3 (MISMA VERSIÓN QUE EL EDITOR) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/gridstack.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/html-dnd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/gridstack-h5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gridstack@12.3.3/dist/gridstack-all.js"></script>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
            background: black;
        }

        .grid-stack {
            height: 100vh !important;
            width: 100vw !important;
        }

        .grid-stack-item-content {
            display: flex;
            flex-direction: column;
            height: 100%;
            width: 100%;
            overflow: hidden;
            background: #000;
            border: 2px solid #666;
        }

        .slide-title {
            height: 40px;
            color: white;
            text-align: center;
            line-height: 40px;
            font-weight: bold;
            background: rgba(0,0,0,0.5);
            flex-shrink: 0;
        }

        .carousel-area {
            flex: 1;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: black;
            position: relative;
        }

        .slide-img {
            max-height: 100%;
            max-width: 100%;
            display: block;
            margin: auto;
            width: 100%;
            height: 100%;
            object-fit: contain;
            background-color: black;
        }
    </style>
</head>

<body>

    <div class="grid-stack">

        <!-- LOGO FIJO -->
        <div class="grid-stack-item"
             data-gs-id="fixed-logo"
             gs-x="0"
             gs-y="0"
             gs-w="2"
             gs-h="2"
             data-gs-no-move="true"
             data-gs-no-resize="true">

            <div class="grid-stack-item-content d-flex justify-content-center align-items-center bg-secondary-subtle">
                <img src="/images/logo.png" class="img-fluid w-75 h-75 object-fit-contain" />
            </div>

        </div>

        <!-- ÁREA FIJA -->
        <div class="grid-stack-item"
             data-gs-id="fixed-area"
             gs-x="2"
             gs-y="0"
             gs-w="2"
             gs-h="2"
             data-gs-no-move="true"
             data-gs-no-resize="true">

            <div class="grid-stack-item-content d-flex justify-content-center align-items-center"
                 style="color:white; font-size:2rem; font-weight:bold;">
                @Model.Nombre
            </div>

        </div>

        <!-- SLIDES -->
        @foreach (var layout in Model.SlideLayouts.Where(x => x.Slide.Activo))
        {
            <div class="grid-stack-item"
                 data-gs-id="@layout.SlideId"
                 gs-x="@layout.X"
                 gs-y="@layout.Y"
                 gs-w="@layout.Width"
                 gs-h="@layout.Height"
                 data-gs-no-move="true"
                 data-gs-no-resize="true">

                <div class="grid-stack-item-content">

                    <div class="slide-title w-100 text-center"
                         style="background:@layout.Slide.ColorCabecera;">
                        @layout.Slide.Titulo
                    </div>

                    <div class="carousel-area d-flex justify-content-center align-items-center">
                        <div class="carousel-wrapper w-100 h-100">
                            @await Html.PartialAsync("_SlideCarousel", layout.Slide)
                        </div>
                    </div>

                </div>

            </div>
        }
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const TOTAL_ROWS = 12;
            const gridHeight = window.innerHeight;
            const cellHeight = gridHeight / TOTAL_ROWS;

            GridStack.init({
                staticGrid: true,     // ← NO editable
                cellHeight: cellHeight,
                float: true,
                disableOneColumnMode: true,
                margin: 0,
                maxRow: TOTAL_ROWS
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            function ajustarImagenes() {
                document.querySelectorAll(".slide-img").forEach(img => {

                    const cont = img.closest(".carousel-area");
                    if (!cont) return;

                    img.style.maxHeight = cont.clientHeight + "px";
                    img.style.maxWidth = cont.clientWidth + "px";
                });
            }

            ajustarImagenes();
            window.addEventListener("resize", ajustarImagenes);

            document.querySelectorAll(".carousel").forEach(carousel => {
                carousel.addEventListener("slid.bs.carousel", ajustarImagenes);
            });
        });
    </script>

</body>
</html>