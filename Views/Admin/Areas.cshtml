@model IEnumerable<Area>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

<h2>Áreas</h2>

<!-- BOTÓN QUE ABRE EL MODAL DE CREAR -->
<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalCreateArea">
    Crear Área
</button>

<table id="tablaAreas" class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Activo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Nombre</td>
                <td>@a.Descripcion</td>
                <td>
                    <!-- SWITCH ACTIVO -->
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                               onchange="toggleActivoArea(@a.AreaId, this.checked)"
                               @(a.Activo ? "checked" : "")>
                    </div>
                </td>
                <td>
                    <!-- BOTÓN EDITAR -->
                    <button class="btn btn-warning btn-sm rounded-pill"
                            onclick="openEditArea(@a.AreaId)" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </button>

                    <!-- BOTONES EXISTENTES -->
                    <a href="/Admin/Slides?areaId=@a.AreaId" class="btn btn-primary btn-sm rounded-pill" title="Slides">
                        <i class="bi bi-file-earmark-easel-fill"></i>
                    </a>

                    <a href="/Admin/EditorLayout?areaId=@a.AreaId" title="Edición de Layout" class="btn btn-info btn-sm rounded-pill">
                        <i class="bi bi-columns-gap"></i>
                    </a>

                    <a href="/Admin/Fullscreen?areaId=@a.AreaId"
                       class="btn btn-dark btn-sm rounded-pill" target="_blank" title="Fullscreen">
                        <i class="bi bi-fullscreen"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- LLAMADAS A LOS PARTIALS -->
@await Html.PartialAsync("Partials/_ModalCreateArea")
@await Html.PartialAsync("Partials/_ModalEditArea")

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        new DataTable('#tablaAreas', {
            ordering: false
        });

        // ABRIR MODAL DE EDICIÓN
        async function openEditArea(id) {
            const resp = await fetch('/Admin/GetArea?id=' + id);
            const area = await resp.json();

            document.getElementById("editAreaId").value = area.areaId;
            document.getElementById("editNombre").value = area.nombre;
            document.getElementById("editDescripcion").value = area.descripcion;

            new bootstrap.Modal(document.getElementById('modalEditArea')).show();
        }

        // GUARDAR CAMBIOS DEL MODAL
        async function guardarEdicionArea() {
            const formData = new FormData();
            formData.append("areaId", document.getElementById("editAreaId").value);
            formData.append("nombre", document.getElementById("editNombre").value);
            formData.append("descripcion", document.getElementById("editDescripcion").value);

            const resp = await fetch('/Admin/EditArea', {
                method: 'POST',
                body: formData
            });

            const result = await resp.json();

            if (resp.ok) {
                alert(result.message);
                location.reload();
            } else {
                alert("Error: " + result.message);
            }
        }

        // SWITCH ACTIVO
        async function toggleActivoArea(id, estado) {
            const resp = await fetch('/Admin/UpdateAreaActivo', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ areaId: id, activo: estado })
            });

            const result = await resp.json();

            if (!resp.ok) {
                alert("Error: " + result.message);
            }
        }
    </script>
}