<div class="modal fade" id="modalDeleteImage" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Eliminar Imagen</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p>¿Seguro que deseas eliminar esta imagen?</p>
                <input type="hidden" id="deleteImageId">
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-danger" onclick="confirmDeleteImage()">Eliminar</button>
            </div>

        </div>
    </div>
</div>

<script>
    function openDeleteImage(id) {
        document.getElementById("deleteImageId").value = id;
        new bootstrap.Modal(document.getElementById('modalDeleteImage')).show();
    }

    async function confirmDeleteImage() {
        const id = parseInt(document.getElementById("deleteImageId").value);

        const resp = await fetch('/Admin/DeleteImageFetch?id=' + id, {
            method: 'DELETE'
        });

        const result = await resp.json();

        if (resp.ok) {
            alert(result.message);
            location.reload();
        } else {
            alert("Error: " + result.message);
        }
    }
</script>