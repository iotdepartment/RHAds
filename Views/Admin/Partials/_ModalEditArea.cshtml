<!-- Modal Editar Área -->
<div class="modal fade" id="modalEditArea" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Editar Área</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="editAreaId">

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input id="editNombre" type="text" class="form-control">
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea id="editDescripcion" class="form-control" rows="2"></textarea>
                </div>

                <div class="form-check mb-3">
                    <input id="editActivo" type="checkbox" class="form-check-input">
                    <label class="form-check-label">Activo</label>
                </div>

                <div class="form-check mb-3">
                    <input id="editEsInstitucional" type="checkbox" class="form-check-input">
                    <label class="form-check-label">Es Institucional</label>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-warning" onclick="guardarEdicionArea()">Guardar Cambios</button>
            </div>

        </div>
    </div>
</div>

<script>

    /* ============================
       GUARDAR EDICIÓN DE ÁREA
    ============================ */
               async function guardarEdicionArea() {
        const req = {
            areaId: parseInt(document.getElementById("editAreaId").value),
            nombre: document.getElementById("editNombre").value,
            descripcion: document.getElementById("editDescripcion").value,
            activo: document.getElementById("editActivo").checked,
            esInstitucional: document.getElementById("editEsInstitucional").checked
        };

        try {
            const resp = await fetch('/Admin/EditArea', {
                method: 'POST',
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(req)
            });

            const result = await resp.json();

            if (!resp.ok || !result.success) {
                showToast(result.message || "Error al actualizar el área", "error");
                return;
            }

            // Cerrar modal
            bootstrap.Modal.getInstance(document.getElementById('modalEditArea')).hide();

            // Toast éxito
            showToast(result.message, "success");

            // ✅ Recargar DataTable desde el servidor
            tablaAreas.ajax.reload(null, false);

        } catch (err) {
            showToast("Error de conexión con el servidor", "error");
        }
    }

            async function openEditArea(id) {
        try {
            const resp = await fetch('/Admin/GetArea?id=' + id);
            const result = await resp.json();

            if (resp.ok && result.success) {
                document.getElementById("editAreaId").value = result.areaId;
                document.getElementById("editNombre").value = result.nombre;
                document.getElementById("editDescripcion").value = result.descripcion;

                // ✅ checkboxes
                document.getElementById("editActivo").checked = result.activo;
                document.getElementById("editEsInstitucional").checked = result.esInstitucional;

                new bootstrap.Modal(document.getElementById('modalEditArea')).show();
            } else {
                showToast(result.message || "No se pudo cargar el área", "error");
            }
        } catch (err) {
            showToast("Error de conexión con el servidor", "error");
        }
    }


</script>